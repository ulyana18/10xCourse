---
import Layout from '../layouts/Layout.astro';
import { FlashcardsGenerateView } from '../components/flashcardsGeneration/FlashcardsGenerateView';
import { ErrorBoundary } from '../components/shared/feedback/ErrorBoundary';
import { Toaster } from 'sonner';
---

<Layout title="Generate Flashcards">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Generate Flashcards</h1>
    <ErrorBoundary client:load>
      <FlashcardsGenerateView client:load />
    </ErrorBoundary>
    <Toaster richColors closeButton />
  </main>
</Layout> 